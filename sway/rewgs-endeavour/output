set $center_display "DP-1"
set $right_display "DP-2"
set $touch_display "DP-3"

# Get the names of your outputs by running: swaymsg -t get_outputs
output $center_display resolution 3840x2160@60Hz position 0,0 scale 1
output $right_display resolution 3840x2160@60Hz position 3840,0 scale 1
output $touch_display resolution 1920x1080@60Hz position 960,2160 scale 1

# available modes: stretch, fill, fit, center, tile
output * bg "~/Pictures/wallpapers/dark 4k.jpg" fill
