function update_packages () {
    if [[ $(uname) == "Darwin" ]]; then
        brew update
        brew upgrade
    elif [[ $(uname) == "Linux" ]]; then
        distro=$( ( lsb_release -ds || cat /etc/*release || uname -om ) 2>/dev/null | head -n1)
        if [[ $distro == *"Debian"* ]] || [[ $distro == *"Ubuntu"* ]] ; then
            apt update
            apt upgrade -y
        elif [[ $distro == *"Arch"* ]] ; then
            pacman -Syq
        fi
    fi
}
