function source_shell () {
    if [[ $(uname) == "Darwin" ]]; then
        if [[ $SHELL == "/bin/bash" ]]; then
            source "$HOME/.bashrc"
        elif [[ $SHELL == "/bin/zsh" ]]; then
            source "$HOME/.zshrc"
        fi
    elif [[ $(uname) == "Linux" ]]; then
        if [[ $SHELL == "/usr/bin/bash" ]]; then
            source "$HOME/.bashrc"
        elif [[ $SHELL == "/usr/bin/zsh" ]]; then
            source "$HOME/.zshrc"
        fi
    fi
}
