function run_function_as_sudo () {
    local arg="$1"

    # NOTE: `type -w` is zsh's equivalent of bash's `type -t`
    # local arg_type="$(type -w "$arg")"

    # Runs $arg as function
    # shift && command sudo "$SHELL" -c "($declare -f "$arg"); $arg $*"
    sudo "$SHELL" -c "($declare -f "$arg"); $arg"
}
