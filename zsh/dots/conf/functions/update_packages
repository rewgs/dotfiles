update_packages() {
    if [[ $(uname) == "Darwin" ]]; then
        echo "Updating packages for macOS."
        if command -v brew >/dev/null; then
            echo "homebrew"
            brew update
            brew upgrade
        fi
        
        return 0
    fi

    if [[ $(uname) == "Linux" ]]; then
        if command -v apt >/dev/null; then
            echo "Updating packages for Debian-based Linux distribution."
            sudo apt update
            sudo apt upgrade -y
            return 0
        elif command -v dnf >/dev/null; then
            echo "Updating packages for Red Hat-based distribution (Fedora/CentOS/RHEL) Linux distribution."
            sudo dnf upgrade --refresh --assumeyes
            return 0
        elif command -v pacman >/dev/null; then
            echo "Updating packages for Arch-based Linux distribution."
            sudo pacman -Syu --noconfirm
            paru -Syu --noconfirm
            return 0
        else
            echo "Unknown Linux distribution; exiting."
            return 1
        fi
    fi
}
